{
    "clusterName": "<%= p('cluster_name') %>",
    "version": 88,
    "partitions": [
        {
            "id": 0,
            "partitionState": "READ_WRITE",
            "replicaCapacityInBytes": 10737418240,
            "replicas": [
                <% link('server').instances.each do |instance| %>
                {
                    "hostname": "<%= instance.address %>",
                    "port": <%= p('port') %>,
                    "mountPath": "/var/vcap/store/ambry_server"
                }
                <% end %>
            ]
        }
    ]
}
